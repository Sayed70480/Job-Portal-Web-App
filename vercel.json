{
  "builds": [
    {
      "src": "Clients/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "Server/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Server/app.js" },
    { "src": "/(.*)", "dest": "Clients/build/$1" }
  ]
}